#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
include /usr/share/dpkg/buildflags.mk
CFLAGS+=$(CPPFLAGS)
CXXFLAGS+=$(CPPFLAGS)
DPKG_EXPORT_BUILDFLAGS = 1
DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --buildsystem=cmake --with python3

override_dh_auto_configure:
	dh_auto_configure -Bbuild -- \
            -DCMAKE_SKIP_INSTALL_RPATH:BOOL=ON \
            -DCMAKE_INSTALL_PREFIX:PATH=/usr \
            -DCMAKE_INSTALL_LIBDIR:PATH=lib/$(DEB_HOST_MULTIARCH) \
            -DINSTALL_DESTDIR:PATH=$(CURDIR)/debian/otrobopt \
            -DOTROBOPT_PYTHON_MODULE_PATH=lib/python3/dist-packages \
            -DCMAKE_UNITY_BUILD=ON

override_dh_auto_build:
	$(MAKE) -C build -j4

override_dh_auto_install:
	dh_auto_install -Bbuild
ifeq (,$(findstring nocheck,$(DEB_BUILD_OPTIONS)))
	LD_LIBRARY_PATH=$${LD_LIBRARY_PATH:+$${LD_LIBRARY_PATH}:}$(CURDIR)/debian/otrobopt/usr/lib/$(DEB_HOST_MULTIARCH) \
	  $(MAKE) -C build test ARGS="-R pyinstallcheck --output-on-failure --schedule-random -j4"
endif

override_dh_auto_test:
